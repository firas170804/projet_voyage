{% extends 'base.html.twig' %}

{% block title %}Formulaire{% endblock %}

{% block body %}
<style>
    form {
        max-width: 600px;
        margin: 50px auto;
        padding: 30px;
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    form:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 50px rgba(0, 0, 0, 0.15);
    }

    form div {
        margin-bottom: 20px;
    }

    form label {
        display: block;
        font-weight: 600;
        color: #495057;
        margin-bottom: 8px;
        font-size: 16px;
    }

    form input[type="text"],
    form input[type="email"],
    form input[type="password"],
    form textarea,
    form select {
        width: 100%;
        padding: 12px 15px;
        border: 1px solid #d1d5db;
        border-radius: 8px;
        background-color: #f9fafb;
        font-size: 15px;
        color: #6b7280;
        transition: border-color 0.3s ease;
    }

    form input:focus,
    form textarea:focus,
    form select:focus {
        border-color: #3b82f6;
        outline: none;
        box-shadow: 0 0 8px rgba(59, 130, 246, 0.3);
    }

    .btn {
        display: inline-block;
        background-color: #3b82f6;
        color: white;
        padding: 12px 25px;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        font-weight: 500;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.3s ease;
        width: 100%;
        text-align: center;
    }

    .btn:hover {
        background-color: #2563eb;
        transform: translateY(-2px);
    }

    .btn:active {
        background-color: #1d4ed8;
        transform: translateY(1px);
    }

    .form-errors {
        color: #ef4444;
        margin-bottom: 20px;
        font-weight: 500;
    }
</style>

<div class="container">
   <h1>Créer un nouvel Aéroport</h1>

    {{ form_start(form) }}

        {# Affiche les erreurs globales du formulaire #}
        {% if form.vars.errors|length > 0 %}
            <div class="form-errors">
                {{ form_errors(form) }}
            </div>
        {% endif %}

        {{ form_widget(form) }}

        <button class="btn">{{ button_label|default('Enregistrer') }}</button>

    {{ form_end(form) }}
</div>
{% endblock %}
