{% extends 'base.html.twig' %}

{% block title %}Liste des Aéroports{% endblock %}

{% block body %}
<style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap');

    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(135deg, #f0f9ff, #e0f7fa);
        margin: 0;
        padding: 2rem;
        color: #333;
    }

    h1 {
        font-size: 2.5rem;
        font-weight: 700;
        text-align: center;
        color: #0d47a1;
        margin-bottom: 3rem;
        position: relative;
    }

    h1::after {
        position: absolute;
        right: -2rem;
        font-size: 1.5rem;
        top: 0.5rem;
    }

    .list-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 1.5rem;
    }

    .list-item {
        background: #ffffff;
        border-radius: 1rem;
        padding: 1.5rem;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.05);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .list-item:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1);
    }

    .info {
        margin-bottom: 1rem;
    }

    .info .title {
        font-size: 1.25rem;
        font-weight: 600;
        color: #00695c;
    }

    .info span {
        font-size: 0.95rem;
        color: #555;
    }

    .actions {
        display: flex;
        justify-content: flex-end;
        gap: 0.5rem;
    }

    .btn {
        text-decoration: none;
        padding: 0.5rem 1rem;
        border-radius: 0.5rem;
        font-weight: 500;
        font-size: 0.9rem;
        transition: background-color 0.2s ease, transform 0.2s ease;
    }

    .btn:hover {
        transform: scale(1.05);
    }

    .btn-view {
        background-color: #2196f3;
        color: white;
    }

    .btn-view:hover {
        background-color: #1e88e5;
    }

    .btn-edit {
        background-color: #ff9800;
        color: white;
    }

    .btn-edit:hover {
        background-color: #fb8c00;
    }

    .btn-create {
        display: block;
        width: fit-content;
        margin: 3rem auto 0;
        background-color: #4caf50;
        color: white;
        padding: 0.75rem 1.5rem;
        font-size: 1.1rem;
        font-weight: bold;
        border-radius: 2rem;
        box-shadow: 0 4px 14px rgba(0, 0, 0, 0.1);
        transition: background-color 0.3s ease;
    }

    .btn-create:hover {
        background-color: #388e3c;
    }

    p {
        text-align: center;
        color: #757575;
        font-size: 1rem;
        margin-top: 2rem;
    }
</style>

    {% if is_granted('ROLE_ADMIN') %}
        {% include 'navbar/navbarAdmin.html.twig' %}
    {% elseif is_granted('ROLE_AGENCE') %}
        {% include 'navbar/navbarAgence.html.twig' %}
    {% elseif is_granted('ROLE_PASSAGER') %}
        {% include 'navbar/navbarPassager.html.twig' %}
    {%else %}
        {% include 'navbar/navbarHome.html.twig' %}
    {% endif %}

<h1>Liste des Aéroports</h1>

<div class="list-container">
    {% for aeroport in aeroports %}
        <div class="list-item">
            <div class="info">
                <span class="title">{{ aeroport.nom }}</span>
                <span>{{ aeroport.ville }}, {{ aeroport.pays }}</span>
            </div>
            <div class="actions">
                <a href="{{ path('app_aeroport_show', {'id': aeroport.id}) }}" class="btn btn-view">Voir</a>
                <a href="{{ path('app_aeroport_edit', {'id': aeroport.id}) }}" class="btn btn-edit">Modifier</a>
            </div>
        </div>
    {% else %}
        <p>Aucun aéroport trouvé.</p>
    {% endfor %}
</div>

<a href="{{ path('app_aeroport_new') }}" class="btn-create">Ajouter un aéroport</a>
{% endblock %}
