{% extends 'base.html.twig' %}

{% block title %}Modifier Avion{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Montserrat:wght@600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-color: #3a86ff;
            --secondary-color: #00b4d8;
            --accent-color: #ffbe0b;
            --dark-color: #1a1a2e;
            --light-color: #f8f9fa;
            --danger-color: #ff5a5f;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f5f7fa;
            background-image: url('https://images.unsplash.com/photo-1436491865332-7a61a109cc05?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1474&q=80');
            background-size: cover;
            background-attachment: fixed;
            background-position: center;
            color: var(--dark-color);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            perspective: 1000px;
        }

        body::before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, rgba(58, 134, 255, 0.1) 0%, rgba(0, 180, 216, 0.08) 50%, rgba(255, 190, 11, 0.1) 100%);
            z-index: -1;
        }

        .form-container {
            width: 100%;
            max-width: 700px;
            margin: 30px auto;
            padding: 40px;
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.15);
            transform-style: preserve-3d;
            animation: fadeInUp 0.8s ease-out;
            border: 1px solid rgba(255, 255, 255, 0.4);
            backdrop-filter: blur(10px);
            position: relative;
            overflow: hidden;
        }

        @keyframes fadeInUp {
            from { opacity: 0; transform: translateY(30px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .form-container::before {
            content: "";
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: linear-gradient(
                to bottom right,
                rgba(58, 134, 255, 0.1),
                rgba(255, 190, 11, 0.1),
                rgba(131, 56, 236, 0.1),
                rgba(0, 180, 216, 0.1)
            );
            transform: rotate(30deg);
            z-index: -1;
            animation: gradientRotate 15s infinite linear;
        }

        @keyframes gradientRotate {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        h1 {
            font-family: 'Montserrat', sans-serif;
            color: var(--primary-color);
            text-align: center;
            margin-bottom: 30px;
            font-size: 2.5rem;
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
        }

        h1::before {
            content: "\f072";
            font-family: "Font Awesome 6 Free";
            font-weight: 900;
            margin-right: 15px;
            color: var(--accent-color);
            font-size: 1.8rem;
            animation: bounce 2s infinite, rotatePlane 8s infinite linear;
        }

        @keyframes bounce {
            0%, 20%, 50%, 80%, 100% {transform: translateY(0);}
            40% {transform: translateY(-10px);}
            60% {transform: translateY(-5px);}
        }

        @keyframes rotatePlane {
            0% { transform: rotateY(0); }
            100% { transform: rotateY(360deg); }
        }

        /* Styles du formulaire */
        .form-group {
            margin-bottom: 25px;
            position: relative;
            transform-style: preserve-3d;
            transition: all 0.3s ease;
        }

        .form-group:hover {
            transform: translateY(-3px);
        }

        .form-group label {
            display: block;
            margin-bottom: 10px;
            font-weight: 600;
            color: var(--primary-color);
            padding-left: 10px;
            position: relative;
        }

        .form-group label::before {
            content: "\f5aa";
            font-family: "Font Awesome 6 Free";
            font-weight: 900;
            margin-right: 12px;
            color: var(--accent-color);
            transition: all 0.3s ease;
        }

        .form-group:hover label::before {
            transform: scale(1.1);
        }

        .form-control {
            width: 100%;
            padding: 14px 20px 14px 50px;
            border: 2px solid #e0e0e0;
            border-radius: 12px;
            font-size: 16px;
            transition: all 0.3s ease;
            background-color: rgba(255, 255, 255, 0.9);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
        }

        .form-control:focus {
            border-color: var(--accent-color);
            outline: none;
            box-shadow: 0 0 0 3px rgba(255, 190, 11, 0.3),
                        0 8px 25px rgba(58, 134, 255, 0.2);
        }

        /* Boutons */
        .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: 14px 30px;
            font-size: 16px;
            border-radius: 12px;
            cursor: pointer;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            font-weight: 600;
            text-decoration: none;
            border: none;
            transform-style: preserve-3d;
            position: relative;
            overflow: hidden;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.15);
        }

        .btn i {
            margin-right: 10px;
            font-size: 1.1em;
            transition: transform 0.3s ease;
        }

        .btn:hover i {
            transform: translateX(5px);
        }

        .btn::after {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.4), transparent);
            transform: translateX(-100%);
            transition: transform 0.6s ease;
        }

        .btn:hover::after {
            transform: translateX(100%);
        }

        .btn-primary {
            background-color: var(--primary-color);
            color: white;
        }

        .btn-primary:hover {
            background-color: #2a75e6;
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(58, 134, 255, 0.4);
        }

        .btn-secondary {
            background-color: var(--secondary-color);
            color: white;
        }

        .btn-secondary:hover {
            background-color: #0099c7;
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0, 180, 216, 0.4);
        }

        .btn-danger {
            background-color: var(--danger-color);
            color: white;
        }

        .btn-danger:hover {
            background-color: #e04a4f;
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(255, 90, 95, 0.4);
        }

        /* Ic√¥nes de voyage */
        .travel-icons {
            display: flex;
            justify-content: center;
            gap: 30px;
            margin: 30px 0;
            perspective: 1000px;
        }

        .travel-icon {
            font-size: 2.8rem;
            color: var(--accent-color);
            animation: float 6s ease-in-out infinite;
            transform-style: preserve-3d;
        }

        @keyframes float {
            0%, 100% { transform: translateY(0) rotateY(0); }
            50% { transform: translateY(-20px) rotateY(20deg); }
        }

        .travel-icon:nth-child(1) { animation-delay: 0s; }
        .travel-icon:nth-child(2) { animation-delay: 0.5s; }
        .travel-icon:nth-child(3) { animation-delay: 1s; }

        /* Animation d'avion en fond */
        .airplane-animation {
            position: fixed;
            right: -100px;
            top: 20%;
            font-size: 3rem;
            animation: airplaneFly 15s linear infinite;
            opacity: 0.7;
            z-index: -1;
            color: var(--primary-color);
        }

        @keyframes airplaneFly {
            0% { transform: translateX(0) translateY(0) rotate(0deg); }
            25% { transform: translateX(-50vw) translateY(-50px) rotate(5deg); }
            50% { transform: translateX(-100vw) translateY(0) rotate(0deg); }
            75% { transform: translateX(-150vw) translateY(50px) rotate(-5deg); }
            100% { transform: translateX(-200vw) translateY(0) rotate(0deg); }
        }

        /* Responsive */
        @media (max-width: 768px) {
            .form-container {
                padding: 30px 20px;
                margin: 20px;
                width: 90%;
            }
            
            h1 {
                font-size: 2rem;
            }
            
            .travel-icons {
                gap: 20px;
            }
            
            .travel-icon {
                font-size: 2.2rem;
            }

            .airplane-animation {
                font-size: 2rem;
                top: 10%;
            }
        }
    </style>
{% endblock %}

{% block body %}
    {% if is_granted('ROLE_ADMIN') %}
        {% include 'navbar/navbarAdmin.html.twig' %}
    {% elseif is_granted('ROLE_AGENCE') %}
        {% include 'navbar/navbarAgence.html.twig' %}
    {% elseif is_granted('ROLE_PASSAGER') %}
        {% include 'navbar/navbarPassager.html.twig' %}
    {% endif %}

    <div class="airplane-animation">
        <i class="fas fa-plane"></i>
    </div>

    <div class="form-container">
        <div class="travel-icons">
            <i class="fas fa-plane travel-icon"></i>
            <i class="fas fa-cogs travel-icon"></i>
            <i class="fas fa-jet-fighter travel-icon"></i>
        </div>

        <h1>Modifier l'avion</h1>

        {{ include('avion/_form.html.twig', {'button_label': 'Mettre √† jour'}) }}

        <div class="d-flex justify-content-between mt-4">
            <a href="{{ path('app_avion_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour √† la liste
            </a>

            {{ include('avion/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}