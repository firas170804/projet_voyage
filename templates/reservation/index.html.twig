        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Date R√©servation</th>
                    <th>Nom</th>
                    <th>Pr√©nom</th>
                    <th>Classe</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for reservation in reservations %}
