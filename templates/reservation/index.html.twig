        <div class="cloud" style="width: 150px; height: 90px; top: 40%; animation-duration: 40s; animation-delay: -10s;"></div>
        <div class="cloud" style="width: 80px; height: 50px; top: 70%; animation-duration: 25s; animation-delay: -5s;"></div>
    </div>
{% endblock %}