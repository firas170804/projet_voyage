<div class="role-form-container">
    {{ form_start(form) }}
        <div class="role-selection">
            <h3 class="role-title">Sélectionnez les rôles :</h3>
            
            <div class="role-options">
                {% for child in form.roles %}
                    <div class="role-option">
                        <label class="role-label-container">
                            {{ form_widget(child, {'attr': {'class': 'role-checkbox'}}) }}
                            <span class="custom-checkbox"></span>
                            <span class="role-text">{{ form_label(child, null, {'label_attr': {'class': 'role-text'}}) }}</span>
                        </label>
                    </div>
                {% endfor %}
            </div>
        </div>

        <div class="form-actions">
            <button type="submit" class="submit-btn">
                <i class="fas fa-save"></i> Mettre à jour
            </button>
       
        </div>
    {{ form_end(form) }}
</div>

<style>
    /* Reset pour stabilité */
    .role-form-container * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }
    
    .role-form-container {
        max-width: 600px;
        margin: 2rem auto;
        padding: 2rem;
        background: white;
        border-radius: 12px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        font-family: system-ui, -apple-system, sans-serif;
    }

    .role-title {
        color: #3a0ca3;
        margin-bottom: 1.5rem;
        font-size: 1.5rem;
        border-bottom: 2px solid #f72585;
        padding-bottom: 0.5rem;
        display: inline-block;
    }

    .role-options {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .role-option {
        padding: 0.5rem;
        background: #f8f9fa;
        border-radius: 8px;
        border-left: 4px solid transparent;
    }

    .role-label-container {
        display: flex;
        align-items: center;
        cursor: pointer;
        padding: 0.5rem;
        width: 100%;
    }

    /* Style custom des checkboxes */
    .role-checkbox {
        position: absolute;
        opacity: 0;
        height: 0;
        width: 0;
    }

    .custom-checkbox {
        height: 20px;
        width: 20px;
        background: white;
        border: 2px solid #d1d3e2;
        border-radius: 4px;
        margin-right: 1rem;
        flex-shrink: 0;
        transition: all 0.2s;
    }

    .role-checkbox:checked ~ .custom-checkbox {
        background-color: #4361ee;
        border-color: #4361ee;
    }

    .custom-checkbox:after {
        content: "";
        display: none;
        width: 5px;
        height: 10px;
        border: solid white;
        border-width: 0 2px 2px 0;
        transform: rotate(45deg);
        position: relative;
        left: 6px;
        top: 2px;
    }

    .role-checkbox:checked ~ .custom-checkbox:after {
        display: block;
    }

    .role-text {
        font-size: 1.1rem;
        color: #212529;
        margin-left: 0.5rem;
    }

    .form-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 2rem;
    }

    .submit-btn {
        background: linear-gradient(135deg, #4361ee, #3a0ca3);
        color: white;
        padding: 0.8rem 1.5rem;
        border: none;
        border-radius: 50px;
        font-size: 1rem;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        transition: background 0.3s ease;
    }

    .submit-btn:hover {
        background: linear-gradient(135deg, #3a56c0, #2e0a87);
    }

    .back-link {
        color: #4361ee;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        transition: color 0.3s ease;
    }

    .back-link:hover {
        color: #3a0ca3;
    }

    /* Responsive */
    @media (max-width: 768px) {
        .role-form-container {
            padding: 1.5rem;
        }
        
        .form-actions {
            flex-direction: column;
            gap: 1rem;
        }
        
        .submit-btn, .back-link {
            width: 100%;
            justify-content: center;
        }
    }
</style>