{% extends 'base.html.twig' %}

{% block title %}Modifier Vol{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Montserrat:wght@600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-color: #4285f4;
            --secondary-color: #34a853;
            --accent-color: #fbbc05;
            --dark-color: #2d3748;
            --light-color: #f8f9fa;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f5f7fa;
            background-image: url('https://images.unsplash.com/photo-1436491865332-7a61a109cc05?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1474&q=80');
            background-size: cover;
            background-attachment: fixed;
            background-position: center;
            color: var(--dark-color);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        body::before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(255, 255, 255, 0.88);
            z-index: -1;
        }

        .form-container {
            width: 100%;
            max-width: 700px;
            margin: 30px auto;
            padding: 40px;
            background-color: white;
            border-radius: 20px;
            box-shadow: 0 15px 50px rgba(0, 0, 0, 0.12);
            transform-style: preserve-3d;
            perspective: 1000px;
            animation: fadeInUp 0.8s ease-out;
            border: 1px solid rgba(255, 255, 255, 0.4);
            backdrop-filter: blur(8px);
            position: relative;
            overflow: hidden;
        }

        .form-container::before {
            content: "";
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: linear-gradient(
                to bottom right,
                rgba(66, 133, 244, 0.1),
                rgba(251, 188, 5, 0.1),
                rgba(234, 67, 53, 0.1),
                rgba(52, 168, 83, 0.1)
            );
            transform: rotate(30deg);
            z-index: -1;
            animation: gradientRotate 15s infinite linear;
        }

        @keyframes gradientRotate {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        h1 {
            font-family: 'Montserrat', sans-serif;
            color: var(--primary-color);
            text-align: center;
            margin-bottom: 30px;
            font-size: 2.5rem;
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
        }

        h1::before {
            content: "\f072";
            font-family: "Font Awesome 6 Free";
            font-weight: 900;
            margin-right: 15px;
            color: var(--accent-color);
            font-size: 1.8rem;
            animation: bounce 2s infinite;
        }

        @keyframes bounce {
            0%, 20%, 50%, 80%, 100% {transform: translateY(0);}
            40% {transform: translateY(-10px);}
            60% {transform: translateY(-5px);}
        }

        /* Styles améliorés pour les champs de formulaire */
        .form-group {
            margin-bottom: 30px;
            position: relative;
            transform-style: preserve-3d;
            transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
        }

        .form-group:hover {
            transform: translateY(-5px) translateZ(10px);
        }

        .form-group label {
            display: block;
            margin-bottom: 10px;
            font-weight: 600;
            color: var(--primary-color);
            padding-left: 10px;
            position: relative;
            transform: translateY(0);
            transition: all 0.3s ease;
        }

        .form-group:hover label {
            transform: translateY(-3px);
            color: var(--secondary-color);
        }

        .form-group label::before {
            content: "\f5aa";
            font-family: "Font Awesome 6 Free";
            font-weight: 900;
            margin-right: 12px;
            color: var(--accent-color);
            transition: all 0.3s ease;
        }

        .form-group:hover label::before {
            transform: scale(1.2);
            color: var(--secondary-color);
        }

        .input-container {
            position: relative;
            perspective: 1000px;
        }

        .form-control {
            width: 100%;
            padding: 16px 20px 16px 50px;
            border: 2px solid #e0e0e0;
            border-radius: 12px;
            font-size: 16px;
            transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
            background-color: rgba(255, 255, 255, 0.9);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
            position: relative;
            z-index: 1;
        }

        .form-control:focus {
            border-color: var(--accent-color);
            outline: none;
            box-shadow: 0 0 0 3px rgba(251, 188, 5, 0.3),
                        0 8px 25px rgba(66, 133, 244, 0.2);
            transform: translateY(-2px) translateZ(5px);
        }

        .input-icon {
            position: absolute;
            left: 20px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--primary-color);
            font-size: 18px;
            z-index: 2;
            transition: all 0.3s ease;
        }

        .form-control:focus + .input-icon {
            color: var(--accent-color);
            transform: translateY(-50%) scale(1.2);
            animation: pulse 1.5s infinite;
        }

        @keyframes pulse {
            0% { transform: translateY(-50%) scale(1.2); }
            50% { transform: translateY(-50%) scale(1.3); }
            100% { transform: translateY(-50%) scale(1.2); }
        }

        .input-highlight {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 0;
            height: 3px;
            background: linear-gradient(90deg, var(--primary-color), var(--accent-color));
            border-radius: 0 0 12px 12px;
            transition: width 0.4s ease, opacity 0.3s ease;
            opacity: 0;
        }

        .form-control:focus ~ .input-highlight {
            width: 100%;
            opacity: 1;
        }

        /* Styles spécifiques pour les différents types de champs */
        .form-group[data-type="date"] label::before {
            content: "\f073";
        }

        .form-group[data-type="time"] label::before {
            content: "\f017";
        }

        .form-group[data-type="text"] label::before {
            content: "\f304";
        }

        .form-group[data-type="number"] label::before {
            content: "\f162";
        }

        /* Styles pour les boutons */
        .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: 14px 30px;
            font-size: 16px;
            border-radius: 12px;
            cursor: pointer;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            font-weight: 600;
            text-decoration: none;
            border: none;
            margin-right: 15px;
            transform-style: preserve-3d;
            position: relative;
            overflow: hidden;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.15);
        }

        .btn i {
            margin-right: 10px;
            font-size: 1.1em;
            transition: transform 0.3s ease;
        }

        .btn:hover i {
            transform: translateX(5px);
        }

        .btn::after {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.4), transparent);
            transform: translateX(-100%);
            transition: transform 0.6s ease;
        }

        .btn:hover::after {
            transform: translateX(100%);
        }

        .btn-primary {
            background-color: var(--primary-color);
            color: white;
        }

        .btn-primary:hover {
            background-color: #3367d6;
            transform: translateY(-5px) translateZ(10px);
            box-shadow: 0 10px 30px rgba(66, 133, 244, 0.4);
        }

        .btn-secondary {
            background-color: var(--secondary-color);
            color: white;
        }

        .btn-secondary:hover {
            background-color: #2d9144;
            transform: translateY(-5px) translateZ(10px);
            box-shadow: 0 10px 30px rgba(52, 168, 83, 0.4);
        }

        .btn-outline {
            background-color: transparent;
            color: var(--primary-color);
            border: 2px solid var(--primary-color);
        }

        .btn-outline:hover {
            background-color: var(--primary-color);
            color: white;
            transform: translateY(-5px) translateZ(10px);
        }

        .action-buttons {
            display: flex;
            justify-content: center;
            margin-top: 40px;
            flex-wrap: wrap;
            gap: 20px;
        }

        .travel-icons {
            display: flex;
            justify-content: center;
            gap: 30px;
            margin: 30px 0;
        }

        .travel-icon {
            font-size: 2.8rem;
            color: var(--accent-color);
            animation: float 4s ease-in-out infinite;
            transform-style: preserve-3d;
            text-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        @keyframes float {
            0%, 100% { 
                transform: translateY(0) rotateY(0) scale(1);
            }
            50% { 
                transform: translateY(-20px) rotateY(20deg) scale(1.15);
                color: var(--secondary-color);
                text-shadow: 0 10px 20px rgba(52, 168, 83, 0.3);
            }
        }

        .travel-icon:nth-child(1) { animation-delay: 0.1s; }
        .travel-icon:nth-child(2) { animation-delay: 0.3s; }
        .travel-icon:nth-child(3) { animation-delay: 0.5s; }
        .travel-icon:nth-child(4) { animation-delay: 0.7s; }

        /* Responsive design */
        @media (max-width: 768px) {
            .form-container {
                padding: 30px 20px;
                margin: 20px;
                width: 90%;
            }
            
            h1 {
                font-size: 2rem;
            }
            
            .action-buttons {
                flex-direction: column;
                gap: 15px;
            }
            
            .btn {
                width: 100%;
                margin-right: 0;
                margin-bottom: 10px;
            }
            
            .travel-icons {
                gap: 20px;
            }
            
            .travel-icon {
                font-size: 2.2rem;
            }
            
            .form-control {
                padding-left: 45px;
            }
            
            .input-icon {
                left: 15px;
                font-size: 16px;
            }
        }
    </style>
{% endblock %}

{% block body %}
    {% if is_granted('ROLE_ADMIN') %}
        {% include 'navbar/navbarAdmin.html.twig' %}
    {% elseif is_granted('ROLE_AGENCE') %}
        {% include 'navbar/navbarAgence.html.twig' %}
    {% elseif is_granted('ROLE_PASSAGER') %}
        {% include 'navbar/navbarPassager.html.twig' %}
    {% endif %}

    <div class="form-container">
        <div class="travel-icons">
            <i class="fas fa-plane travel-icon"></i>
            <i class="fas fa-passport travel-icon"></i>
            <i class="fas fa-suitcase-rolling travel-icon"></i>
            <i class="fas fa-globe-americas travel-icon"></i>
        </div>

        <h1>Modifier le Vol</h1>

        {{ include('vol/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

        <div class="action-buttons">
            <a href="{{ path('app_vol_index') }}" class="btn btn-outline">
                <i class="fas fa-arrow-left"></i> Retour à la liste
            </a>

            {{ include('vol/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}